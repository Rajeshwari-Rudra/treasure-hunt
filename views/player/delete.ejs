<!--
*  Player delete view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to display the item to delete.
*
* @author Denise Case <dcase@nwmissouri.edu>
-->
  
<% if (player.error) { %>
  <div class="alert alert-danger" role="alert"><%- player.error %></div>
  <% } %>
  
  <div class="card-body">
  
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th width=>Action</th>
        </tr>
      </thead>
      <tbody>
  
        <tr>
          <th scope="row"><%= player.id %></th>
          <td><%= player.name%></td>
          <td>
            <form action="/player/delete/<%=player.id%>" method="post">
              <input type="submit" class="btn btn-danger delete" value="Delete" onclick="return alert('Are you sure?')"/>
            </form>
          </td>
        </tr>
  
      </tbody>
    </table>
  