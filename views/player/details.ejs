<% if (player.error) { %>
  <div class="alert alert-danger" role="alert"><%- player.error %></div>
  <% } %>
  
  <div class="card-body">
  
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th >Action</th>
        </tr>
      </thead>
      <tbody>
  
        <tr>
          <th scope="row"><%= player.id %></th>
          <td><%= player.name%></td>
          <td>
            <a class="btn btn-success edit" href="/player">Done</a>
          </td>
        </tr>
  
      </tbody>
    </table>
  